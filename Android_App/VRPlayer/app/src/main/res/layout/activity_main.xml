<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxSendAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/checkBoxSendOrientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <EditText
            android:id="@+id/EditTextAudioIP"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="IP servera"
            android:inputType="text"
            android:singleLine="true" />

        <Button
            android:id="@+id/buttonCalibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calibrate" />

        <Button
            android:id="@+id/videoStartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START VIDEO"/>

        <TextView
            android:id="@+id/textViewShowOrientation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</android.widget.LinearLayout>